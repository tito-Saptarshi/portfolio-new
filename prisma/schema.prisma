generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id           String  @id @default(uuid())
  name         String
  project_type String?
  project_link String?
  tools_used   String?
  github_link  String?
  other_link   String?
  imageUrl     String?
  details      String?
  likes        Int     @default(0)
  views        Int     @default(0)
}

model User {
  id       String   @id @default(uuid())
  userId   String?
  name     String?
  email    String?  @unique
  imageUrl String?
  likesId  String[] @default([])
}
