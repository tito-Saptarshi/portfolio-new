generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id           String  @id @default(uuid())
  name         String
  project_type String?
  project_link String?
  tools_used   String?
  github_link  String?
  other_link   String?
  imageUrl     String?
  details      String?
  likes        Int     @default(0)
  views        Int     @default(0)

  userId String[] @default([])

  createdAt DateTime @default(now())
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  projectId String
  createdAt DateTime @default(now())
}

model User {
  id       String   @id @default(uuid())
  userId   String?
  name     String?
  email    String?  @unique
  imageUrl String?
  likesId  String[] @default([])
}

model AdminContact {
  id          String  @id @default(uuid())
  message     String
  userMail    String
  userId      String
  userName    String
  projectId   String?
  projectName String?
}

model Test {
  id         String  @id @default(uuid())
  testField  String?
  testField2 String?
  testField3 String?
}
